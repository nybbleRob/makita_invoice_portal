{
  "name": "isg-reporting-backend",
  "version": "1.0.0",
  "description": "Backend server for eInvoice Portal",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:start:backend": "pm2 start ecosystem.config.js --only invoice-portal-backend",
    "pm2:start:queue": "pm2 start ecosystem.config.js --only invoice-portal-queue-worker",
    "pm2:start:scheduler": "pm2 start ecosystem.config.js --only invoice-portal-scheduler",
    "pm2:stop": "pm2 stop all",
    "pm2:stop:backend": "pm2 stop invoice-portal-backend",
    "pm2:stop:queue": "pm2 stop invoice-portal-queue-worker",
    "pm2:stop:scheduler": "pm2 stop invoice-portal-scheduler",
    "pm2:restart": "pm2 restart all",
    "pm2:restart:backend": "pm2 restart invoice-portal-backend",
    "pm2:restart:queue": "pm2 restart invoice-portal-queue-worker",
    "pm2:restart:scheduler": "pm2 restart invoice-portal-scheduler",
    "pm2:logs": "pm2 logs",
    "pm2:logs:backend": "pm2 logs invoice-portal-backend",
    "pm2:logs:queue": "pm2 logs invoice-portal-queue-worker",
    "pm2:logs:scheduler": "pm2 logs invoice-portal-scheduler",
    "pm2:monit": "pm2 monit",
    "test:db": "node scripts/test-connection.js",
    "create:admin": "node scripts/create-admin-user.js",
    "check": "node scripts/check-setup.js"
  },
  "keywords": [
    "reporting",
    "admin",
    "dashboard"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@google-cloud/documentai": "^9.5.0",
    "axios": "^1.13.2",
    "basic-ftp": "^5.1.0",
    "bcryptjs": "^3.0.3",
    "bullmq": "^5.34.8",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "exceljs": "^4.4.0",
    "express": "^4.22.1",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.0.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.12",
    "papaparse": "^5.5.3",
    "pdf-parse": "^1.1.1",
    "pdfjs-dist": "^5.4.530",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "qrcode": "^1.5.4",
    "sequelize": "^6.35.2",
    "sharp": "^0.34.5",
    "speakeasy": "^2.0.0",
    "ssh2-sftp-client": "^12.0.1",
    "uuid": "^13.0.0",
    "winston": "^3.19.0",
    "xlsx": "^0.18.5",
    "xlsx-calc": "^0.9.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}
